{
    "name": "pxgamer/trello-php",
    "type": "library",
    "description": "A simple PHP wrapper for utilising the Trello api.",
    "license": "MIT",
    "require": {
        "php": "^7.1",
        "ext-curl": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.4",
        "squizlabs/php_codesniffer": "^3.1"
    },
    "autoload": {
        "psr-4": {
            "pxgamer\\Trello\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "pxgamer\\Trello\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    }
}
